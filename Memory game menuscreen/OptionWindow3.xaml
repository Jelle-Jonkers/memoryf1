<Window x:Class="Memory_game_menuscreen.OptionWindow3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_game_menuscreen"
        mc:Ignorable="d"
        Title="OptionWindow3" Height="400" Width="400"
         Background="#FF212121">

    <Grid Background="#FF212121" HorizontalAlignment="Center" VerticalAlignment="Center" >


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="35" Foreground="White" FontFamily="/Memory game menuscreen;component/Fonts/#Formula1 Display Regular" >Groote Speelveld:</TextBlock>
        <Button Grid.Column="1" Grid.Row="3" Content="4x4" Foreground="White" Background="PaleVioletRed" FontSize="28" FontFamily="/Memory game menuscreen;component/Fonts/#Formula1 Display Regular" Width="100"  />
        <Button Grid.Column="1" Grid.Row="5" Content="6x6" Foreground="White" Background="PaleVioletRed" FontSize="28" FontFamily="/Memory game menuscreen;component/Fonts/#Formula1 Display Regular" Width="100"  />
        <Button Grid.Column="1" Grid.Row="7" Content="5x8" Foreground="White" Background="PaleVioletRed" FontSize="28" FontFamily="/Memory game menuscreen;component/Fonts/#Formula1 Display Regular" Width="100"  />
        <Button Grid.Column="1" Grid.Row="9" Content="Sluiten" Foreground="White" Background="PaleVioletRed" FontSize="28" FontFamily="/Memory game menuscreen;component/Fonts/#Formula1 Display Regular" Width="150" Click="Button_Click"   />
    </Grid>
</Window>
