<Window x:Class="Week6_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week6_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF212121">

        <Grid Height="225" Width="200" HorizontalAlignment="Left">

            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Background="#FF212121" Foreground="White" >speler 1</TextBlock>
            <TextBlock Grid.Row="1" Background="#FF212121" Foreground="White" >speler 2</TextBlock>
            

        </Grid>
        <Grid x:Name="MainGrid" Margin="10" Width="{Binding ElementName=MainGrid,Path=ActualHeight}">

        </Grid>
        <Grid Width="150" Height="300" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Foreground="White">knoppen voor het menu</TextBlock>
            <TextBlock Grid.Row="1" Foreground="White">nog een plek in het menu</TextBlock>
            <TextBlock Grid.Row="2" Foreground="White">enz.</TextBlock>
        </Grid>
        <Button x:Name="test1btn" Content="test1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,195,0,0" Click="Test1_Click"/>
        <Button x:Name="test2btn" Content="test2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,236,0,0" Click="Test2btn_Click"/>
        <Button x:Name="test3btn" Content="test3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,280,0,0" Click="Test3btn_Click"/>

    </Grid>
</Window>
